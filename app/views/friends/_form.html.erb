<%= form_with(model: friend) do |form| %>
  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control", id:"name", placeholder:"Enter name" %>
  </div>

  <div class="form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class:"form-control", id:"email", placeholder:"Enter email" %>
  </div>

  <div class="form-group">
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, class:"form-control", id:"phone", placeholder:"Enter phone" %>
  </div>

  <div class="form-group">
    <%= form.label :comment, style: "display: block" %>
    <%= form.text_area :comment, class:"form-control", id:"comment", placeholder:"Enter comment" %>
  </div>

  <div class="form-group">
    <%# <%= form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, class:"form-control", id: :friend_user_id, value: current_user.id, type: :hidden %>
  </div>
  <br/>

  <button type="submit" class="btn btn-dark"><%= @friend.new_record? ? 'Create' : 'Update' %></button>
<% end %>
