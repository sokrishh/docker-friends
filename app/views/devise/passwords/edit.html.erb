<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-lg-6">

      <h2 class="text-center text-dark mt-5">Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field form-group">
          <%= f.label :password, "New password" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control", id:"password", placeholder:"Enter new password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"password", placeholder:"Confirm new password" %>
        </div>
        <br>

        <div class="actions">
          <%= f.submit "Change my password", class:"btn btn-dark" %>
        </div>
        <br>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
