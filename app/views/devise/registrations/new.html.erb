<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-lg-6">
      <h2 class="text-center text-dark mt-5">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <%= f.label :email, style: "display: block" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"email", placeholder:"Enter email" %>
        </div>

        <div class="field form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"email", placeholder:"Enter password" %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"email", placeholder:"Confirm password" %>
        </div>

        <br />

        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-dark" %>
        </div>

        <br />
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>